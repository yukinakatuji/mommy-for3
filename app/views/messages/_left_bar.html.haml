.main-view
  .left-bar
    .left-box
      .user-box
        = current_user.name
      .icon-box
        .side-icon-edit
          = link_to new_group_path do
            =icon("far","edit", class: "icon")
        .side-icon-users
          = link_to "#" do
            =icon("fa","users",class: "icon")
        .side-icon-tshirt
          =link_to edit_group_path(:group) do
            =icon("fa","tshirt",class: "icon")
      .side-group
        .groups-list
          - current_user.groups.each do |group|
            .groups-list-top
              = link_to group_messages_path(group) do
                .groups-list-center
                  =group.name
                .groups-list-bottom
                  = group.show_last_message